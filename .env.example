# Environment configuration for Blog Platform API

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/blog_platform

# Server port
PORT=3000

# Authentication secret (for middleware)
AUTH_SECRET=mysecrettoken

# Node environment (development/production)
NODE_ENV=development

# CORS allowed origins (comma separated, optional)
CORS_ORIGINS=http://localhost:3000

# Log level (optional)
LOG_LEVEL=info
